<h1>Your Profile </h1>

<%= form_for(@user) do |form| %>
  

<div class="form-group" >
<label class="sr-only" >Enter your first Name</label>

		<div class="avatar">
			<img class="pic_image_circle" src="<%= @user.avatar %>" alt="User Profile Pic">
		</div><br />


 <b>First: </b> 
<%= form.text_field :first_name ,class:"form-control" ,id:"exampleInputEmail2", placeholder:"First Name" %>
</div>

<div class="form-group" >
<label class="sr-only">Last Name</label>
 <b>Last: </b> 
<%= form.text_field :last_name ,class:"form-control" ,id:"exampleInputEmail2", placeholder:"Last Name" %>
</div>

<div class="form-group">
<b>Email: </b> 
<label class="sr-only"> Email</label>
<%= form.text_field :email, class:"form-control", id:"exampleInputPassword2", placeholder:"Email"%>
</div>

<div class="form-group">
<b>Avatar Picture: </b> 
<label class="sr-only"> Avatar</label>
<%= form.file_field :avatar, class:"form-control", id:"exampleInputPassword2", placeholder:"Upload a Picture"%>
</div>

<div class="form-group">
<b>Address </b> 
<label class="sr-only"> Address </label>
<%= form.text_field :address, class:"form-control", id:"exampleInputPassword2", placeholder:"your location"%>
</div>

<div class="submit-field">
<%= form.submit "Update Profile" %>
</div>




<% end %>