<% if @user.nearbys(100) %>
	<% @user.nearbys(100).all.each do |location| %>
	  <li><%= link_to location.address, location %> (<%= location.distance.round(2) %> miles)</li>
	<% end %>
<% end %>

<% unless current_user == @user %>
    <%= link_to "Add Friend", friendships_path(:friend_id => @user.id), :method => :post %>
<% end %>

<h4>Friends</h4>
<ul>
    <% @user.friends.each do |friend| %>
    <li>
      <%= friend.first_name %> <%= friend.last_name %>
      <% if current_user == @user %>
        <%= link_to "Remove", friendship_path(friend.id), :method => :delete %>
      <% end %>
    </li>
  <% end %>
</ul>

<% if current_user == @user %>
    <h4>Friend Requests</h4>
    <ul>
        <% @user.requested_friendships.each do |request| %>
        <li>
          <%= request.first_name %> <%= request.last_name %> 
          <%= link_to "Accept", friendship_path(request.id), :method => "put" %> 
          <%= link_to "Decline", friendship_path(request.id), :method => :delete %>
        </li>
      <% end %>
    </ul>
<% end %>


<%= image_tag "http://maps.google.com/maps/api/staticmap?size=450x300&sensor=false&zoom=16&markers=#{@user.latitude}%2C#{@user.longitude}" %>

