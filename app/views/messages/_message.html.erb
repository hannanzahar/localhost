    <%= image_tag(message_interlocutor(message).avatar.url , class: "media-object pull-left", height:"70", width:"70" )  %>
  </div>
  <div class="chatboxmessagecontent">
    <p><%= message.body %></p>
    <time datetime="<%= message.created_at %>" title="<%= message.created_at.strftime("%d %b  %Y at %I:%M%p") %>">
