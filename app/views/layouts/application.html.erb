  PrivatePub.subscribe(channel, function(data) {
    var sender_id = data.sid;
    var recipient_id = data.rip;
    var conversation_id = data.cid;
    $.post("/conversations", { sender_id: sender_id, recipient_id: recipient_id }, function (data) {
